<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@drawable/linearlayout_bg">

        <TextView
            android:id="@+id/txt_head_add_marker_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Das ist ein Test"
            android:textSize="35sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_below="@+id/txt_head_add_marker_fragment"
            android:layout_marginBottom="3dp"
            android:background="@drawable/seperator" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#01000000">

            <Button
                android:id="@+id/btn_marker_abort"
                style="@style/LoginButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_marker_submit"
                android:layout_toStartOf="@+id/btn_marker_submit"
                android:background="#FF0000" />

            <Button
                android:id="@+id/btn_marker_submit"
                style="@style/LoginButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#00FF00" />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>